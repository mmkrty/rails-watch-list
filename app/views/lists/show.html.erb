<div class="container">
  <h1 class="mt-5 mb-3"><%= @list.name %></h1>

    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success text-white mb-2" %>
    <%= link_to "Delete list",
      list_path(@list),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
      class: "btn btn-danger text-white  mb-2"
      %>
    <%= link_to "Back to all List", lists_path, class: "btn btn-primary mb-2" %>

    <div class="row row-cols-1 row-cols-md-3 g-4 mb-4">
      <% @bookmarks.each do |bookmark| %>
        <div class="col">
          <div class="card h-100 shadow">
            <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=  bookmark.movie.title %></h5>
              <p class="card-text">&#9733 <%=  bookmark.movie.rating %></p>
              <p class="card-text"><%=  bookmark.movie.overview %></p>
            </div>
            <div class="card-footer">
              <p class="card-text"><%=  bookmark.comment %></p>
              <%= link_to "Delete",
                bookmark_path(bookmark),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
                class: "btn btn-danger text-white"
              %>
            </div>
          </div>
        </div>
      <% end %>
    </div>


</div>
